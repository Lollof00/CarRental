    <link rel="stylesheet" href="${pageContext.request.contextPath}/assets/css/style.css">
    <link rel="stylesheet" href="${pageContext.request.contextPath}/assets/css/owl.css">
  </head>

  <body>

    <div id="preloader">
        <div class="jumper">
            <div></div>
